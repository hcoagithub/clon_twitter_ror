<!DOCTYPE html>
<html>
  <head>
    <title>ClonTwitter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    

  <div class="container-fluid" style="padding: 0;">
    <nav class="navbar navbar-expand-lg navbar-light p-2">

       <%= link_to twitters_path, class:"navbar-brand", style:"color: white" do %>          
            <i class="fa-brands fa-square-twitter"></i>
            Twitter Clone
        <% end %>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="hi mr-auto">

            </ul>
        </div>
    </nav>
  </div>


  <div id="main" class="container-fluid d-flex">
    <!-- Barra Izquierda -->
      <div class="sidebar m-5 d-none d-md-block">
          <div class="">
              <div class="card " style="width: 18rem; text-align:center;border-radius: 20px;">
                  <img class="card-img-top rounded-circle"
                      style="width:60%; position: relative;left: 62px;padding-top: 20px;"
                      src="https://toppng.com/uploads/preview/roger-berry-avatar-placeholder-11562991561rbrfzlng6h.png"
                      alt="Card image cap">
                  <div class="card-body">
                  
                  </div>

              </div>
             
          </div>
      </div>
    <!-- End Barra Izquierda -->

      <!-- Center -->
      <div class="content">

          
          <%= render 'shared/flash' %>
          <%= yield %>


      </div>
      <!-- End Center -->


        <!-- Barra Derecha -->
          <div class="sidebar m-5 d-none d-xl-block">
              <div class="card" style="width: 18rem;">
                  <div class="card-header">
                      Who to Follow
                  </div>
                  <ul class="list-group list-group-flush">
                      <li class="list-group-item"><a href="https://twitter.com/playboicarti"
                              style="text-decoration: none;color: #657787;">@harry_potter</a></li>
                      <li class="list-group-item"><a href="https://twitter.com/LILUZIVERT"
                              style="text-decoration: none;color: #657787;">@hulk</a></li>
                      <li class="list-group-item"><a href="https://twitter.com/NARUTO_kousiki"
                              style="text-decoration: none;color: #657787;">@spiderman</a></li>
                  </ul>
              </div>
          </div>
        <!-- End Barra Derecha -->
  </div>


  </body>
</html>
